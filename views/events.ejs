<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events | Alumnium</title>
    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        /* --- 1. ALUMNIUM THEME --- */
        :root {
            --background: #f8f9fa;
            --foreground: #111827;
            --card: #ffffff;
            --primary: #111827;
            --primary-foreground: #ffffff;
            --secondary: #f3f4f6;
            --muted-foreground: #6b7280;
            --border: #e5e7eb;
            --radius: 1rem;
            --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.07), 0 4px 6px -4px rgb(0 0 0 / 0.07);
            --glow-color: rgba(139, 92, 246, 0.2);
            --danger: #dc3545;
            --success: #16a34a;
            --warning: #f59e0b;
        }
        html.dark {
            --background: #0d1117;
            --foreground: #e6edf3;
            --card: #161b22;
            --primary: #e6edf3;
            --primary-foreground: #0d1117;
            --secondary: #21262d;
            --muted-foreground: #8b949e;
            --border: #30363d;
            --glow-color: rgba(139, 92, 246, 0.3);
            --danger: #ff5b5b;
            --success: #22c55e;
            --warning: #facc15;
        }
        
        /* --- 2. DASHBOARD STRUCTURE --- */
        body {
            font-family: var(--font-sans);
            background-color: var(--background);
            color: var(--foreground);
            overflow-x: hidden;
            font-size: 15px;
        }
        .dashboard-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            min-height: 100vh;
        }
        .sidebar {
            background-color: var(--card);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            padding: 1.5rem;
            transition: transform 0.3s ease-in-out;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 280px;
            z-index: 1050;
        }
        .main-content {
            background-color: var(--secondary);
            padding: 2.5rem;
            overflow-y: auto;
            grid-column: 2;
        }
        h1, h2 { font-size: 1.75rem; font-weight: 700; }
        h3, h5 { font-size: 1.25rem; font-weight: 600; }

        /* --- 3. SIDEBAR & NAVIGATION --- */
        .sidebar-header { font-size: 1.5rem; font-weight: 700; color: var(--foreground); text-decoration: none; margin-bottom: 2rem; display:flex; align-items:center; gap: 0.5rem; }
        .sidebar-nav .nav-link {
            color: var(--muted-foreground); font-weight: 500; padding: 0.75rem 1rem; border-radius: 0.75rem;
            margin-bottom: 0.25rem; display: flex; align-items: center; font-size: 14px;
            transition: all 0.2s ease;
        }
        .sidebar-nav .nav-link i { margin-right: 0.75rem; font-size: 1.1rem; }
        .sidebar-nav .nav-link:hover { color: var(--foreground); background-color: var(--secondary); }
        .sidebar-nav .nav-link.active { color: var(--primary-foreground); background-color: var(--primary); }
        .sidebar-footer { margin-top: auto; border-top: 1px solid var(--border); padding-top: 1.5rem; }
        .user-profile { display: flex; align-items: center; text-decoration: none; color: var(--foreground); flex-grow: 1; }
        .user-profile img { width: 40px; height: 40px; border-radius: 50%; margin-right: 0.75rem; }
        .profile-menu-trigger { color: var(--muted-foreground); text-decoration: none; padding: 0.5rem; margin-left: 0.5rem; border-radius: 0.5rem; }
        .profile-menu-trigger:hover { background-color: var(--secondary); color: var(--foreground); }
        .dropdown-menu {
            background-color: var(--card); border-radius: var(--radius); border: 1px solid var(--border);
            box-shadow: var(--shadow-lg); padding: 0.5rem;
        }
        .dropdown-item { color: var(--foreground); padding: 0.6rem 1rem; border-radius: 0.5rem; font-weight: 500; font-size: 14px; }
        .dropdown-item:hover, .dropdown-item:focus { background-color: var(--secondary); color: var(--foreground); }
        .dropdown-item.text-danger { color: var(--danger) !important; }
        .dropdown-item.text-danger:hover { background-color: rgba(220, 53, 69, 0.1); }
        html.dark .dropdown-item.text-danger:hover { background-color: rgba(255, 91, 91, 0.1); }
        .dropdown-divider { border-color: var(--border); }

        /* --- 4. PAGE-SPECIFIC COMPONENTS --- */
        .content-card {
            background-color: var(--card); border: 1px solid var(--border); border-radius: var(--radius);
            box-shadow: var(--shadow-lg); padding: 1.5rem; position: relative; overflow: hidden;
            height: 100%; /* Ensures all cards have the same height */
            display: flex;
            flex-direction: column;
        }
        .aurora-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 300px;
            height: 300px;
            background: radial-gradient(ellipse at center, var(--glow-color) 0%, rgba(0, 0, 0, 0) 70%);
            filter: blur(50px);
            z-index: 0;
            pointer-events: none;
            opacity: 0;
            transition: opacity 1.2s ease-out;
        }
        .is-visible .aurora-glow { opacity: 1; }
        
        .form-control, .form-select {
            background-color: var(--card);
            border-color: var(--border);
            color: var(--foreground);
            font-weight: 500;
            border-radius: 0.5rem;
        }
        .form-control:focus, .form-select:focus {
            background-color: var(--card);
            border-color: var(--glow-color);
            box-shadow: 0 0 0 3px var(--glow-color);
            color: var(--foreground);
        }
        .search-wrapper { position: relative; }
        .search-icon { position: absolute; top: 50%; left: 1rem; transform: translateY(-50%); color: var(--muted-foreground); }
        .search-wrapper .form-control { padding-left: 2.75rem; }
        .input-group .form-control {
            border-top-right-radius: 0.5rem;
            border-bottom-right-radius: 0.5rem;
        }
        .input-group .input-group-text {
            background-color: var(--secondary);
            border-color: var(--border);
            color: var(--muted-foreground);
            border-radius: 0.5rem 0 0 0.5rem;
        }
        /* New styles for date and time inputs */
        input[type="date"], input[type="time"] {
            color-scheme: var(--theme-color-scheme, light);
        }
        html.dark {
            --theme-color-scheme: dark;
        }
        input::placeholder {
            color: var(--muted-foreground);
            opacity: 1; /* Override default browser opacity */
        }
        html.dark input::placeholder {
             color: var(--muted-foreground);
        }

        .btn { border-radius: 0.5rem; font-weight: 500; font-size: 14px; }
        .btn-light { background-color: var(--secondary); border-color: var(--border); color: var(--foreground); }
        .btn-primary {
            background-color: var(--primary);
            color: var(--primary-foreground);
            border: none;
        }
        html.dark .btn-primary {
            background-color: var(--primary);
            color: var(--primary-foreground);
        }

        .table { --bs-table-bg: transparent; --bs-table-color: var(--foreground); --bs-table-border-color: var(--border); --bs-table-hover-bg: var(--secondary); --bs-table-hover-color: var(--foreground); font-size: 14px; }
        .table thead th { color: var(--muted-foreground); font-weight: 500; border-bottom: 1px solid var(--border); }
        .table tbody tr:last-child td { border-bottom: 0; }
        .table td { vertical-align: middle; }

        /* --- 5. ANIMATIONS --- */
        .animate-on-scroll { 
            opacity: 0; 
            transform: translateY(30px); 
            transition: opacity 0.8s ease-out, transform 0.8s ease-out; 
        }
        .is-visible { 
            opacity: 1; 
            transform: translateY(0); 
        }
        .animate-on-scroll { 
            transition-delay: calc(0.1s * var(--animation-order, 0)); 
        }

        /* --- 6. MOBILE RESPONSIVENESS --- */
        .mobile-header { display: flex; justify-content: space-between; align-items: center; }
        .sidebar-backdrop {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.5); z-index: 1040;
            opacity: 0; visibility: hidden;
            transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
        }
        body.sidebar-open .sidebar-backdrop { opacity: 1; visibility: visible; }
        @media (max-width: 991.98px) {
            .dashboard-layout { grid-template-columns: 1fr; }
            .main-content { grid-column: 1 / -1; padding: 1.5rem; }
            .sidebar { transform: translateX(-100%); }
            .sidebar.show { transform: translateX(0); }
        }
        .modal-content {
            background-color: var(--card);
            border-radius: var(--radius);
            border: 1px solid var(--border);
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }
        .modal-content .modal-body {
            position: relative;
            z-index: 1;
        }
        .modal-body .text-success { color: #16a34a !important; }
        html.dark .modal-body .text-success { color: #22c55e !important; }
        .modal-body .text-danger { color: #dc3545 !important; }
        html.dark .modal-body .text-danger { color: #ff5b5b !important; }
        .badge { font-weight: 600; font-size: 0.75rem; padding: 0.35em 0.65em; }
        .card-description {
            max-height: 5em;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        .event-card .card-description {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            white-space: normal;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .view-details-card {
            background-color: var(--secondary);
            border-left: 3px solid var(--border);
            border-radius: 0.5rem;
            padding: 0.75rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <aside class="sidebar" id="sidebar">
            <a href="/admin" class="sidebar-header"><i class="fas fa-link me-2"></i> Alumnium</a>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/admin"><i class="fas fa-grip-horizontal"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user_management"><i class="fas fa-users"></i> User Management</a></li>
                    <li class="nav-item"><a class="nav-link" href="/announcements"><i class="fas fa-bullhorn"></i> Announcements</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/events"><i class="fas fa-calendar-alt"></i> Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-coins"></i> Donations</a></li>
                    <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-comment-dots"></i> Feedback</a></li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <div class="dropdown dropend w-100">
                    <div class="d-flex align-items-center">
                        <a href="#" class="user-profile">
                            <img src="https://placehold.co/40x40/EBEBEB/000000?text=A" alt="Admin">
                            <div><div class="fw-bold">Admin User</div><small class="text-muted-foreground"><%= admin %></small></div>
                        </a>
                        <a href="#" class="profile-menu-trigger" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" id="theme-menu-toggle"><i class="fas fa-moon me-2"></i> Theme</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <div class="mobile-header d-lg-none mb-4">
                <h1 class="h2">Events</h1>
                <button class="btn btn-light" type="button" id="sidebarToggle"><i class="fas fa-bars"></i></button>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4 d-none d-lg-flex">
                <h1 class="h2">Events</h1>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEventModal"><i class="fas fa-plus me-2"></i> Create New Event</button>
            </div>

            <div class="row g-4">
                <!-- Filters & Search Card -->
                <div class="col-12">
                    <div class="content-card">
                        <div class="aurora-glow"></div>
                        <div class="row g-3 align-items-end">
                            <div class="col-lg-5">
                                <label for="search-input" class="form-label fw-medium">Search</label>
                                <div class="search-wrapper">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" id="search-input" class="form-control" placeholder="Search events by title...">
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-6">
                                <label for="category-filter" class="form-label fw-medium">Category</label>
                                <select id="category-filter" class="form-select">
                                    <option value="">All Categories</option>
                                    <option value="Workshops">Workshops</option>
                                    <option value="Alumni meetups">Alumni meetups</option>
                                    <option value="Webinars">Webinars</option>
                                    <option value="Hackathons">Hackathons</option>
                                    <option value="Placements drives">Placements drives</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-sm-6">
                                <label for="status-filter" class="form-label fw-medium">Status</label>
                                <select id="status-filter" class="form-select">
                                    <option value="">All Statuses</option>
                                    <option value="Upcoming">Upcoming</option>
                                    <option value="Ongoing">Ongoing</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Events List -->
                <div class="col-12">
                    <div class="row g-4" id="events-list">
                        <% if (events.length > 0) { %>
                            <% events.forEach(event => { %>
                                <div class="col-lg-6">
                                    <div class="content-card event-card">
                                        <div class="aurora-glow"></div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="badge rounded-pill bg-<%= event.status.toLowerCase().replace(' ', '-') %>"><%= event.status %></span>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item view-btn" href="#" data-bs-toggle="modal" data-bs-target="#viewEventModal" data-event-id="<%= event._id %>"><i class="fas fa-eye me-2"></i> View Details</a></li>
                                                    <li><a class="dropdown-item edit-btn" href="#" data-bs-toggle="modal" data-bs-target="#editEventModal" data-event-id="<%= event._id %>"><i class="fas fa-edit me-2"></i> Edit</a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item text-danger delete-btn" data-bs-toggle="modal" data-bs-target="#deleteEventModal" data-event-id="<%= event._id %>" data-event-title="<%= event.title %>"><i class="fas fa-trash-alt me-2"></i> Delete Event</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <h5 class="fw-bold"><%= event.title %></h5>
                                        <p class="text-muted-foreground"><i class="fas fa-calendar-alt me-2"></i><%= event.date %>, <%= event.time %></p>
                                        <p class="text-muted-foreground"><i class="fas fa-map-marker-alt me-2"></i><a href="<%= event.venue_link %>" class="text-muted-foreground" target="_blank"><%= event.venue_name %></a></p>
                                        <p class="text-muted-foreground mt-3 card-description">
                                            <% if (event.description.length > 150) { %>
                                                <%= event.description.substring(0, 150) %>...
                                            <% } else { %>
                                                <%= event.description %>
                                            <% } %>
                                        </p>
                                        <small class="text-muted-foreground mt-auto">Organizer: <%= event.organizer_name %> (<%= event.organizer_contact %>)</small>
                                        <div class="mt-3">
                                            <a href="#" class="btn btn-light btn-sm"><%= event.category %></a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12 text-center text-muted-foreground py-5">
                                <h5 class="fw-bold">No Events Found</h5>
                                <p>There are no events to display at the moment. Start by creating a new one!</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Create Event Modal -->
    <div class="modal fade" id="createEventModal" tabindex="-1" aria-labelledby="createEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="aurora-glow"></div>
                <div class="modal-body p-4">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title fw-bold text-center mb-4">Schedule New Event</h5>
                    <form action="/create-event" method="POST">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="event-title" class="form-label">Event Title</label>
                                <input type="text" class="form-control" id="event-title" name="title" required>
                            </div>
                            <div class="col-md-6">
                                <label for="event-date" class="form-label">Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input type="date" class="form-control" id="event-date" name="date" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="event-time" class="form-label">Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" id="event-time" name="time" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="event-venue-name" class="form-label">Venue/Online Link Name</label>
                                <input type="text" class="form-control" id="event-venue-name" name="venue_name" placeholder="e.g., Main Auditorium, Google Meet" required>
                            </div>
                             <div class="col-12">
                                <label for="event-venue-link" class="form-label">Venue/Online Link URL</label>
                                <input type="url" class="form-control" id="event-venue-link" name="venue_link" placeholder="e.g., https://goo.gl/maps/..." required>
                            </div>
                            <div class="col-12">
                                <label for="event-description" class="form-label">Description</label>
                                <textarea class="form-control" id="event-description" name="description" rows="3" required></textarea>
                            </div>
                            <div class="col-md-6">
                                <label for="event-organizer-name" class="form-label">Organizer Name</label>
                                <input type="text" class="form-control" id="event-organizer-name" name="organizer_name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="event-organizer-contact" class="form-label">Organizer Contact</label>
                                <input type="text" class="form-control" id="event-organizer-contact" name="organizer_contact" required>
                            </div>
                            <div class="col-12">
                                <label for="event-category" class="form-label">Category</label>
                                <select id="event-category" class="form-select" name="category" required>
                                    <option value="">Select a category</option>
                                    <option value="Workshops">Workshops</option>
                                    <option value="Alumni meetups">Alumni meetups</option>
                                    <option value="Webinars">Webinars</option>
                                    <option value="Hackathons">Hackathons</option>
                                    <option value="Placements drives">Placements drives</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">Schedule Event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Edit Event Modal -->
    <div class="modal fade" id="editEventModal" tabindex="-1" aria-labelledby="editEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="aurora-glow"></div>
                <div class="modal-body p-4">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title fw-bold text-center mb-4">Edit Event</h5>
                    <form id="edit-event-form" action="/edit-event" method="POST">
                        <input type="hidden" id="edit-event-id" name="id">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="edit-event-title" class="form-label">Event Title</label>
                                <input type="text" class="form-control" id="edit-event-title" name="title" required>
                            </div>
                            <div class="col-md-6">
                                <label for="edit-event-date" class="form-label">Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input type="date" class="form-control" id="edit-event-date" name="date" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="edit-event-time" class="form-label">Time</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                    <input type="time" class="form-control" id="edit-event-time" name="time" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="edit-event-venue-name" class="form-label">Venue/Online Link Name</label>
                                <input type="text" class="form-control" id="edit-event-venue-name" name="venue_name" placeholder="e.g., Main Auditorium, Google Meet" required>
                            </div>
                             <div class="col-12">
                                <label for="edit-event-venue-link" class="form-label">Venue/Online Link URL</label>
                                <input type="url" class="form-control" id="edit-event-venue-link" name="venue_link" placeholder="e.g., https://goo.gl/maps/..." required>
                            </div>
                            <div class="col-12">
                                <label for="edit-event-description" class="form-label">Description</label>
                                <textarea class="form-control" id="edit-event-description" name="description" rows="3" required></textarea>
                            </div>
                            <div class="col-md-6">
                                <label for="edit-event-organizer-name" class="form-label">Organizer Name</label>
                                <input type="text" class="form-control" id="edit-event-organizer-name" name="organizer_name" required>
                            </div>
                            <div class="col-md-6">
                                <label for="edit-event-organizer-contact" class="form-label">Organizer Contact</label>
                                <input type="text" class="form-control" id="edit-event-organizer-contact" name="organizer_contact" required>
                            </div>
                            <div class="col-12">
                                <label for="edit-event-category" class="form-label">Category</label>
                                <select id="edit-event-category" class="form-select" name="category" required>
                                    <option value="">Select a category</option>
                                    <option value="Workshops">Workshops</option>
                                    <option value="Alumni meetups">Alumni meetups</option>
                                    <option value="Webinars">Webinars</option>
                                    <option value="Hackathons">Hackathons</option>
                                    <option value="Placements drives">Placements drives</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- View Event Modal -->
    <div class="modal fade" id="viewEventModal" tabindex="-1" aria-labelledby="viewEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="aurora-glow"></div>
                <div class="modal-body p-4">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title fw-bold text-center mb-4" id="viewEventTitle"></h5>
                    <div class="row g-3">
                        <div class="col-md-6 view-details-card">
                            <label class="form-label text-muted-foreground">Date</label>
                            <p class="fw-bold" id="viewEventDate"></p>
                        </div>
                        <div class="col-md-6 view-details-card">
                            <label class="form-label text-muted-foreground">Time</label>
                            <p class="fw-bold" id="viewEventTime"></p>
                        </div>
                        <div class="col-12 view-details-card">
                            <label class="form-label text-muted-foreground">Venue</label>
                            <p class="fw-bold" id="viewEventVenue"></p>
                        </div>
                        <div class="col-12 view-details-card">
                            <label class="form-label text-muted-foreground">Description</label>
                            <p class="fw-bold" id="viewEventDescription"></p>
                        </div>
                        <div class="col-md-6 view-details-card">
                            <label class="form-label text-muted-foreground">Organizer</label>
                            <p class="fw-bold" id="viewEventOrganizer"></p>
                        </div>
                        <div class="col-md-6 view-details-card">
                            <label class="form-label text-muted-foreground">Contact</label>
                            <p class="fw-bold" id="viewEventContact"></p>
                        </div>
                        <div class="col-12 view-details-card">
                            <label class="form-label text-muted-foreground">Category</label>
                            <p class="fw-bold" id="viewEventCategory"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Delete Event Modal -->
    <div class="modal fade" id="deleteEventModal" tabindex="-1" aria-labelledby="deleteEventModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="aurora-glow"></div>
                <div class="modal-body text-center py-5">
                    <i class="fas fa-exclamation-triangle text-danger mb-3" style="font-size: 4rem;"></i>
                    <h5 class="modal-title fw-bold" id="deleteEventModalLabel">Confirm Deletion</h5>
                    <p class="text-muted-foreground mt-2">Are you sure you want to delete the event "<strong id="eventTitleToDelete"></strong>"? This action cannot be undone.</p>
                    <form action="/delete-event" method="POST" class="mt-4">
                        <input type="hidden" name="eventId" id="eventIdToDelete">
                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="aurora-glow"></div>
                <div class="modal-body text-center py-5">
                    <i class="fas fa-check-circle text-success mb-3" style="font-size: 4rem;"></i>
                    <h5 class="modal-title fw-bold" id="successModalLabel">Success!</h5>
                    <p class="text-muted-foreground mt-2">The event has been successfully updated.</p>
                    <button type="button" class="btn btn-primary w-100 mt-4" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- POPUP LOGIC ---
            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            if (status === 'created' || status === 'deleted' || status === 'updated') {
                const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                const modalTitle = document.getElementById('successModalLabel');
                const modalMessage = document.querySelector('#successModal .modal-body p');
                if (status === 'created') {
                    modalTitle.textContent = 'Event Scheduled!';
                    modalMessage.textContent = 'The event has been successfully scheduled and is now live.';
                } else if (status === 'deleted') {
                    modalTitle.textContent = 'Event Deleted!';
                    modalMessage.textContent = 'The selected event has been permanently removed.';
                } else if (status === 'updated') {
                    modalTitle.textContent = 'Event Updated!';
                    modalMessage.textContent = 'The event has been successfully updated with your changes.';
                }
                successModal.show();
            }
            
            // --- VIEW & EDIT MODAL LOGIC ---
            document.getElementById('events-list').addEventListener('click', async function(event) {
                const viewBtn = event.target.closest('.view-btn');
                const editBtn = event.target.closest('.edit-btn');
                const deleteBtn = event.target.closest('.delete-btn');
                
                if (viewBtn || editBtn) {
                    const eventId = viewBtn ? viewBtn.getAttribute('data-event-id') : editBtn.getAttribute('data-event-id');
                    try {
                        const response = await fetch(`/api/event/${eventId}`);
                        const eventData = await response.json();
                        if (response.ok) {
                            if (viewBtn) {
                                document.getElementById('viewEventTitle').textContent = eventData.title;
                                document.getElementById('viewEventDate').textContent = eventData.date;
                                document.getElementById('viewEventTime').textContent = eventData.time;
                                const viewEventVenueElement = document.getElementById('viewEventVenue');
                                if (eventData.venue_link && eventData.venue_link.startsWith('http')) {
                                     viewEventVenueElement.innerHTML = `<a href="${eventData.venue_link}" target="_blank" class="text-muted-foreground" style="color:var(--muted-foreground) !important">${eventData.venue_name}</a>`;
                                } else {
                                     viewEventVenueElement.textContent = eventData.venue_name;
                                }
                                document.getElementById('viewEventDescription').textContent = eventData.description;
                                document.getElementById('viewEventOrganizer').textContent = eventData.organizer_name;
                                document.getElementById('viewEventContact').textContent = eventData.organizer_contact;
                                document.getElementById('viewEventCategory').textContent = eventData.category;
                            } else if (editBtn) {
                                document.getElementById('edit-event-id').value = eventData._id;
                                document.getElementById('edit-event-title').value = eventData.title;
                                document.getElementById('edit-event-date').value = eventData.date;
                                document.getElementById('edit-event-time').value = eventData.time;
                                document.getElementById('edit-event-venue-name').value = eventData.venue_name;
                                document.getElementById('edit-event-venue-link').value = eventData.venue_link;
                                document.getElementById('edit-event-description').value = eventData.description;
                                document.getElementById('edit-event-organizer-name').value = eventData.organizer_name;
                                document.getElementById('edit-event-organizer-contact').value = eventData.organizer_contact;
                                document.getElementById('edit-event-category').value = eventData.category;
                            }
                        } else {
                            console.error("Failed to fetch event data.");
                        }
                    } catch (error) {
                        console.error("Error fetching event data:", error);
                    }
                }
                
                if (deleteBtn) {
                    const eventId = deleteBtn.getAttribute('data-event-id');
                    const eventTitle = deleteBtn.getAttribute('data-event-title');
                    document.getElementById('eventTitleToDelete').textContent = eventTitle;
                    document.getElementById('eventIdToDelete').value = eventId;
                }
            });

            // --- SEARCH AND FILTER LOGIC ---
            const searchInput = document.getElementById('search-input');
            const categoryFilter = document.getElementById('category-filter');
            const statusFilter = document.getElementById('status-filter');
            const eventsListContainer = document.getElementById('events-list');

            const fetchEvents = async () => {
                const title = searchInput.value;
                const category = categoryFilter.value;
                const status = statusFilter.value;
                const url = `/api/search-events?title=${title}&category=${category}&status=${status}`;

                try {
                    const response = await fetch(url);
                    const events = await response.json();
                    renderEvents(events);
                } catch (error) {
                    console.error("Error fetching events:", error);
                    eventsListContainer.innerHTML = `
                        <div class="col-12 text-center text-muted-foreground py-5">
                            <h5 class="fw-bold">Error Loading Events</h5>
                            <p>An error occurred while fetching the events. Please try again later.</p>
                        </div>
                    `;
                }
            };

            const renderEvents = (events) => {
                eventsListContainer.innerHTML = '';
                if (events.length === 0) {
                    eventsListContainer.innerHTML = `
                        <div class="col-12 text-center text-muted-foreground py-5">
                            <h5 class="fw-bold">No Events Found</h5>
                            <p>There are no events to display at the moment. Try a different search!</p>
                        </div>
                    `;
                    return;
                }
                events.forEach(event => {
                    const badgeClass = event.status.toLowerCase().replace(' ', '-');
                    const eventCardHtml = `
                        <div class="col-lg-6">
                            <div class="content-card event-card">
                                <div class="aurora-glow"></div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge rounded-pill bg-${badgeClass}">${event.status}</span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item view-btn" href="#" data-bs-toggle="modal" data-bs-target="#viewEventModal" data-event-id="${event._id}"><i class="fas fa-eye me-2"></i> View Details</a></li>
                                            <li><a class="dropdown-item edit-btn" href="#" data-bs-toggle="modal" data-bs-target="#editEventModal" data-event-id="${event._id}"><i class="fas fa-edit me-2"></i> Edit</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger delete-btn" data-bs-toggle="modal" data-bs-target="#deleteEventModal" data-event-id="${event._id}" data-event-title="${event.title}"><i class="fas fa-trash-alt me-2"></i> Delete Event</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <h5 class="fw-bold">${event.title}</h5>
                                <p class="text-muted-foreground"><i class="fas fa-calendar-alt me-2"></i>${event.date}, ${event.time}</p>
                                <p class="text-muted-foreground"><i class="fas fa-map-marker-alt me-2"></i><a href="${event.venue_link}" class="text-muted-foreground" target="_blank">${event.venue_name}</a></p>
                                <p class="text-muted-foreground mt-3 card-description">
                                    ${event.description.length > 150 ? event.description.substring(0, 150) + '...' : event.description}
                                </p>
                                <small class="text-muted-foreground mt-auto">Organizer: ${event.organizer_name} (${event.organizer_contact})</small>
                                <div class="mt-3">
                                    <a href="#" class="btn btn-light btn-sm">${event.category}</a>
                                </div>
                            </div>
                        </div>
                    `;
                    eventsListContainer.innerHTML += eventCardHtml;
                });
            };

            const debounce = (func, delay) => {
                let timeout;
                return (...args) => {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), delay);
                };
            };

            searchInput.addEventListener('input', debounce(fetchEvents, 300));
            categoryFilter.addEventListener('change', fetchEvents);
            statusFilter.addEventListener('change', fetchEvents);


            // --- SHARED DASHBOARD LOGIC (THEME & SIDEBAR) ---
            const themeMenuToggle = document.getElementById('theme-menu-toggle');
            const htmlElement = document.documentElement;
            const applyTheme = (theme) => {
                htmlElement.classList.remove('light', 'dark');
                htmlElement.classList.add(theme);
            };
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            applyTheme(savedTheme);

            themeMenuToggle.addEventListener('click', (e) => {
                e.preventDefault();
                const newTheme = htmlElement.classList.contains('dark') ? 'light' : 'dark';
                localStorage.setItem('theme', newTheme);
                applyTheme(newTheme);
            });

            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', () => { 
                    sidebar.classList.add('show'); 
                    document.body.classList.add('sidebar-open'); 
                });
            }
            if (backdrop) {
                backdrop.addEventListener('click', () => { 
                    sidebar.classList.remove('show'); 
                    document.body.classList.remove('sidebar-open'); 
                });
            }
            
            // SCROLL-TRIGGERED ANIMATIONS
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    } else {
                        entry.target.classList.remove('is-visible');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.content-card').forEach(element => {
                observer.observe(element);
            });
        });
    </script>
</body>

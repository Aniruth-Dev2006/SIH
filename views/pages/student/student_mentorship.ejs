<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentorship Program | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/create_student.css">
    <style>
        .mentor-card { transition: all 0.3s; }
        .mentor-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
        .skill-badge { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
    </style>
</head>
<body>
    <div class="toast-container" id="toastContainer"></div>
    <%- include('partials/header') %>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/sidebar', { role: 'student' }) %>

        <main class="main-content">
            <div class="mobile-header d-lg-none mb-4">
                <h1 class="h2">Mentorship</h1>
                <button class="btn btn-light" type="button" id="sidebarToggle"><i class="bi bi-list"></i></button>
            </div>

            <h1 class="h2 mb-4 d-none d-lg-block">Find Your Mentor</h1>

            <!-- My Mentorship Status -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="content-card">
                        <h6 class="text-muted-foreground">Active Mentorships</h6>
                        <h2 class="mb-0">2</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="content-card">
                        <h6 class="text-muted-foreground">Pending Requests</h6>
                        <h2 class="mb-0 text-warning">1</h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="content-card">
                        <h6 class="text-muted-foreground">Completed Sessions</h6>
                        <h2 class="mb-0">8</h2>
                    </div>
                </div>
            </div>

            <!-- Current Mentors -->
            <div class="content-card mb-4">
                <h5 class="mb-3">My Current Mentors</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card mentor-card">
                            <div class="card-body">
                                <div class="d-flex align-items-start">
                                    <img src="https://ui-avatars.com/api/?name=Dr.+Rajesh+Kumar&background=random" class="rounded-circle me-3" width="60" height="60">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Dr. Rajesh Kumar</h6>
                                        <p class="text-muted-foreground small mb-2">Tech Lead @ Google • 12 years exp</p>
                                        <div class="mb-2">
                                            <span class="badge skill-badge me-1">Machine Learning</span>
                                            <span class="badge skill-badge">Cloud Architecture</span>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-primary" onclick="scheduleMeeting(1)">
                                                <i class="bi bi-calendar-check"></i> Schedule
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" onclick="viewMentorDetails(1)">
                                                <i class="bi bi-eye"></i> View Profile
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Browse Mentors -->
            <div class="content-card mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Browse Available Mentors</h5>
                    <div class="input-group" style="width: 300px;">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Search mentors...">
                    </div>
                </div>

                <div class="mb-3">
                    <div class="btn-group">
                        <button class="btn btn-outline-primary active">All</button>
                        <button class="btn btn-outline-primary">Software Development</button>
                        <button class="btn btn-outline-primary">Data Science</button>
                        <button class="btn btn-outline-primary">Product Management</button>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card mentor-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Priya+Sharma&background=random" class="rounded-circle mb-3" width="80" height="80">
                                <h6 class="mb-1">Priya Sharma</h6>
                                <p class="text-muted-foreground small mb-2">Senior SDE @ Amazon</p>
                                <div class="mb-3">
                                    <span class="badge skill-badge me-1">Full Stack</span>
                                    <span class="badge skill-badge">AWS</span>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted-foreground">
                                        <i class="bi bi-star-fill text-warning"></i> 4.9 • 15 mentees
                                    </small>
                                </div>
                                <button class="btn btn-primary btn-sm w-100" onclick="requestMentorship(1)">
                                    <i class="bi bi-send"></i> Request Mentorship
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mentor-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Amit+Verma&background=random" class="rounded-circle mb-3" width="80" height="80">
                                <h6 class="mb-1">Amit Verma</h6>
                                <p class="text-muted-foreground small mb-2">Data Scientist @ Microsoft</p>
                                <div class="mb-3">
                                    <span class="badge skill-badge me-1">ML/AI</span>
                                    <span class="badge skill-badge">Python</span>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted-foreground">
                                        <i class="bi bi-star-fill text-warning"></i> 4.8 • 12 mentees
                                    </small>
                                </div>
                                <button class="btn btn-primary btn-sm w-100" onclick="requestMentorship(2)">
                                    <i class="bi bi-send"></i> Request Mentorship
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mentor-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Sneha+Patel&background=random" class="rounded-circle mb-3" width="80" height="80">
                                <h6 class="mb-1">Sneha Patel</h6>
                                <p class="text-muted-foreground small mb-2">Product Manager @ Meta</p>
                                <div class="mb-3">
                                    <span class="badge skill-badge me-1">Product</span>
                                    <span class="badge skill-badge">Strategy</span>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted-foreground">
                                        <i class="bi bi-star-fill text-warning"></i> 5.0 • 8 mentees
                                    </small>
                                </div>
                                <button class="btn btn-primary btn-sm w-100" onclick="requestMentorship(3)">
                                    <i class="bi bi-send"></i> Request Mentorship
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Request Modal -->
    <div class="modal fade" id="requestModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Request Mentorship</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="mentorshipRequestForm">
                        <div class="mb-3">
                            <label class="form-label">Area of Interest</label>
                            <select class="form-select" required>
                                <option value="">Select area...</option>
                                <option>Software Development</option>
                                <option>Data Science</option>
                                <option>Product Management</option>
                                <option>Career Guidance</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Why do you want this mentorship?</label>
                            <textarea class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Preferred Meeting Frequency</label>
                            <select class="form-select">
                                <option>Weekly</option>
                                <option>Bi-weekly</option>
                                <option>Monthly</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitMentorshipRequest()">Send Request</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script>
        function requestMentorship(mentorId) {
            new bootstrap.Modal(document.getElementById('requestModal')).show();
        }

        function submitMentorshipRequest() {
            AlumniumUtils.showToast('Mentorship request sent successfully!', 'success');
            bootstrap.Modal.getInstance(document.getElementById('requestModal')).hide();
        }

        function scheduleMeeting(mentorId) {
            AlumniumUtils.showToast('Opening calendar...', 'info');
        }

        function viewMentorDetails(mentorId) {
            AlumniumUtils.showToast('Loading mentor profile...', 'info');
        }
    </script>
</body>
</html>

    <script>
        // Star rating functionality
        document.querySelectorAll('.rating-stars').forEach(ratingGroup => {
            const stars = ratingGroup.querySelectorAll('i');
            
            stars.forEach((star, index) => {
                star.addEventListener('click', () => {
                    const rating = star.getAttribute('data-rating');
                    
                    // Clear all stars in this group
                    stars.forEach(s => {
                        s.classList.remove('bi-star-fill', 'filled');
                        s.classList.add('bi-star');
                    });
                    
                    // Fill stars up to clicked one
                    for (let i = 0; i < rating; i++) {
                        stars[i].classList.remove('bi-star');
                        stars[i].classList.add('bi-star-fill', 'filled');
                    }
                    
                    AlumniumUtils.showToast(`Rated ${rating} stars`, 'info');
                });
                
                star.addEventListener('mouseenter', () => {
                    const rating = star.getAttribute('data-rating');
                    for (let i = 0; i < rating; i++) {
                        if (!stars[i].classList.contains('filled')) {
                            stars[i].classList.remove('bi-star');
                            stars[i].classList.add('bi-star-fill');
                        }
                    }
                });
            });
            
            ratingGroup.addEventListener('mouseleave', () => {
                stars.forEach(star => {
                    if (!star.classList.contains('filled')) {
                        star.classList.remove('bi-star-fill');
                        star.classList.add('bi-star');
                    }
                });
            });
        });

        function submitFeedback(courseId) {
            AlumniumUtils.showToast('Thank you! Your feedback has been submitted.', 'success');
            setTimeout(() => location.reload(), 1500);
        }

        function viewFeedback(id) {

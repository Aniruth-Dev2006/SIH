            </div>

            <!-- Analytics Section -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="content-card">
                        <h5 class="mb-3">Feedback Categories</h5>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Curriculum</span>
                                <span class="text-muted-foreground">48%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-primary" style="width: 48%"></div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Portal Features</span>
                                <span class="text-muted-foreground">28%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: 28%"></div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Events</span>
                                <span class="text-muted-foreground">15%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-warning" style="width: 15%"></div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="d-flex justify-content-between mb-1">
                                <span>General</span>
                                <span class="text-muted-foreground">9%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-info" style="width: 9%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="content-card">
                        <h5 class="mb-3">Response Time</h5>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h3 class="mb-0">2.4 hrs</h3>
                                <small class="text-muted-foreground">Average response time</small>
                            </div>
                            <i class="bi bi-clock-history display-4 text-primary opacity-25"></i>
                        </div>
                        <div class="alert alert-success">
                            <i class="bi bi-graph-up me-2"></i>
                            Response time improved by 35% this month!
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Response Modal -->
    <div class="modal fade" id="responseModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Respond to Feedback</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Response</label>
                        <textarea class="form-control" id="responseText" rows="4" placeholder="Type your response here..."></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="notifyUser" checked>
                            <label class="form-check-label" for="notifyUser">
                                Notify user via email
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitResponse()">Send Response</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const AlumniumUtils = {
            showToast: function(message, type = 'info') {
                const toastContainer = document.getElementById('toastContainer');
                const icons = {
                    success: 'bi-check-circle-fill text-success',
                    error: 'bi-x-circle-fill text-danger',
                    warning: 'bi-exclamation-triangle-fill text-warning',
                    info: 'bi-info-circle-fill text-primary'
                };
                const toastHTML = `
                    <div class="toast" role="alert">
                        <div class="toast-header">
                            <i class="bi ${icons[type]} me-2"></i>
                            <strong class="me-auto">${type.charAt(0).toUpperCase() + type.slice(1)}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">${message}</div>
                    </div>
                `;
                toastContainer.insertAdjacentHTML('beforeend', toastHTML);
                const toast = new bootstrap.Toast(toastContainer.lastElementChild);
                toast.show();
            }
        };

        let currentFeedbackId = null;

        function filterFeedback(status) {
            AlumniumUtils.showToast(`Filtering feedback by: ${status}`, 'info');
        }

        function respondToFeedback(id, type) {
            currentFeedbackId = id;
            new bootstrap.Modal(document.getElementById('responseModal')).show();
        }

        function submitResponse() {
            const response = document.getElementById('responseText').value;
            if (!response.trim()) {
                AlumniumUtils.showToast('Please enter a response', 'error');
                return;
            }
            AlumniumUtils.showToast('Response sent successfully!', 'success');
            bootstrap.Modal.getInstance(document.getElementById('responseModal')).hide();
            setTimeout(() => location.reload(), 1000);
        }

        function markReviewed(id) {
            AlumniumUtils.showToast('Feedback marked as reviewed', 'success');
            setTimeout(() => location.reload(), 500);
        }

        function markResolved(id) {
            AlumniumUtils.showToast('Feedback marked as resolved', 'success');
            setTimeout(() => location.reload(), 500);
        }

        function editResponse(id) {
            AlumniumUtils.showToast('Opening response editor...', 'info');
        }

        function viewFullFeedback(id) {
            AlumniumUtils.showToast('Opening detailed view...', 'info');
        }

        function markAsSpam(id) {
            if (confirm('Are you sure you want to delete this feedback?')) {
                AlumniumUtils.showToast('Feedback deleted', 'success');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-menu-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    const html = document.documentElement;
                    const newTheme = html.classList.contains('dark') ? 'light' : 'dark';
                    localStorage.setItem('theme', newTheme);
                    html.classList.toggle('dark');
                    AlumniumUtils.showToast('Theme changed to ' + newTheme + ' mode', 'success');
                });
            }

            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', () => {
                    sidebar.classList.add('show');
                    document.body.classList.add('sidebar-open');
                });
                backdrop.addEventListener('click', () => {
                    sidebar.classList.remove('show');
                    document.body.classList.remove('sidebar-open');
                });
            }
        });
    </script>
</body>
</html>

                                    <button class="btn btn-sm btn-success" onclick="markReviewed(3)">
                                        <i class="bi bi-check-circle"></i> Mark Reviewed
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="markAsSpam(3)">
                                        <i class="bi bi-trash"></i> Delete

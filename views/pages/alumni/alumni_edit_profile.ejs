<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/alumni.css">
</head>
<body>
    <div class="toast-container" id="toastContainer"></div>

    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (savedTheme === 'dark') { document.documentElement.classList.add('dark'); }
        })();
    </script>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/alumni-sidebar', { currentPage: 'profile', alumni: alumni }) %>

        <main class="main-content">
            <div class="mobile-header d-lg-none mb-4">
                <h1 class="h2">Edit Profile</h1>
                <button class="btn btn-light" type="button" id="sidebarToggle"><i class="bi bi-list"></i></button>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 d-none d-lg-block mb-0">Edit Profile</h1>
                <a href="/alumni-profile" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Profile
                </a>
            </div>

            <form method="POST" action="/alumni-update-profile" enctype="multipart/form-data">
                
                <!-- Profile Picture -->
                <div class="form-section">
                    <h5><i class="bi bi-camera-fill me-2"></i>Profile Picture</h5>
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center">
                            <img src="<%= alumni.profilePicture || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(alumni.name) + '&background=6366f1&color=fff&size=120' %>" 
                                 alt="Profile Picture" 
                                 class="preview-image mb-3" 
                                 id="profilePreview">
                        </div>
                        <div class="col-md-10">
                            <input type="file" class="form-control" id="profilePicture" name="profilePicture" accept="image/*">
                            <small class="text-muted-foreground">Recommended: Square image, at least 200x200px</small>
                        </div>
                    </div>
                </div>

                <!-- Personal Information -->
                <div class="form-section">
                    <h5><i class="bi bi-person-fill me-2"></i>Personal Information</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="name" value="<%= alumni.name %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" name="email" value="<%= alumni.email %>" required readonly>
                            <small class="text-muted-foreground">Email cannot be changed</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="phone" value="<%= alumni.phone || '' %>" placeholder="+91 98765 43210">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" name="dob" value="<%= alumni.dob ? new Date(alumni.dob).toISOString().split('T')[0] : '' %>">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Gender</label>
                            <select class="form-select" name="gender">
                                <option value="">Select Gender</option>
                                <option value="Male" <%= alumni.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= alumni.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                <option value="Other" <%= alumni.gender === 'Other' ? 'selected' : '' %>>Other</option>
                                <option value="Prefer not to say" <%= alumni.gender === 'Prefer not to say' ? 'selected' : '' %>>Prefer not to say</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control" name="location" value="<%= alumni.location || '' %>" placeholder="City, Country">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Bio</label>
                            <textarea class="form-control" name="bio" rows="3" placeholder="Tell us about yourself..."><%= alumni.bio || '' %></textarea>
                        </div>
                    </div>
                </div>

                <!-- Educational Background -->
                <div class="form-section">
                    <h5><i class="bi bi-mortarboard-fill me-2"></i>Educational Background</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Department <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="dept" value="<%= alumni.dept %>" required readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Batch <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="batch" value="<%= alumni.batch %>" required readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Roll Number <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="rno" value="<%= alumni.rno %>" required readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Course</label>
                            <input type="text" class="form-control" name="course" value="<%= alumni.course || '' %>" placeholder="B.Tech, M.Tech, etc.">
                        </div>
                    </div>
                    <small class="text-muted-foreground d-block mt-2">
                        <i class="bi bi-info-circle me-1"></i>Educational credentials cannot be changed. Contact admin if corrections are needed.
                    </small>
                </div>

                <!-- Professional Information -->
                <div class="form-section">
                    <h5><i class="bi bi-briefcase-fill me-2"></i>Professional Information</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Current Company</label>
                            <input type="text" class="form-control" name="company" value="<%= alumni.company || '' %>" placeholder="Google, Microsoft, etc.">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Designation</label>
                            <input type="text" class="form-control" name="designation" value="<%= alumni.designation || '' %>" placeholder="Software Engineer, Manager, etc.">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Industry</label>
                            <input type="text" class="form-control" name="industry" value="<%= alumni.industry || '' %>" placeholder="IT, Finance, Healthcare, etc.">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Years of Experience</label>
                            <input type="number" class="form-control" name="experience" value="<%= alumni.experience || '' %>" placeholder="5" min="0">
                        </div>
                    </div>
                </div>

                <!-- Skills -->
                <div class="form-section">
                    <h5><i class="bi bi-lightbulb-fill me-2"></i>Skills</h5>
                    <div class="mb-3">
                        <label class="form-label">Add Skills</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="skillInput" placeholder="Type a skill and press Enter">
                            <button type="button" class="btn btn-primary" onclick="addSkill()">
                                <i class="bi bi-plus-circle"></i> Add
                            </button>
                        </div>
                    </div>
                    <div id="skillsContainer" class="mb-3">
                        <% if (alumni.skills && alumni.skills.length > 0) { %>
                            <% alumni.skills.forEach(skill => { %>
                                <span class="skill-tag">
                                    <%= skill %>
                                    <button type="button" onclick="removeSkill(this)">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                    <input type="hidden" name="skills[]" value="<%= skill %>">
                                </span>
                            <% }) %>
                        <% } %>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="form-section">
                    <h5><i class="bi bi-share-fill me-2"></i>Social Links</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-linkedin text-primary me-2"></i>LinkedIn</label>
                            <input type="url" class="form-control" name="linkedin" value="<%= alumni.linkedin || '' %>" placeholder="https://linkedin.com/in/yourprofile">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-github me-2"></i>GitHub</label>
                            <input type="url" class="form-control" name="github" value="<%= alumni.github || '' %>" placeholder="https://github.com/yourusername">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-twitter text-info me-2"></i>Twitter</label>
                            <input type="url" class="form-control" name="twitter" value="<%= alumni.twitter || '' %>" placeholder="https://twitter.com/yourusername">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label"><i class="bi bi-globe me-2"></i>Website</label>
                            <input type="url" class="form-control" name="website" value="<%= alumni.website || '' %>" placeholder="https://yourwebsite.com">
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="d-flex justify-content-end gap-3">
                    <a href="/alumni-profile" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Profile picture preview
        document.getElementById('profilePicture').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('profilePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Skills management
        function addSkill() {
            const input = document.getElementById('skillInput');
            const skill = input.value.trim();
            
            if (skill) {
                const container = document.getElementById('skillsContainer');
                const skillTag = document.createElement('span');
                skillTag.className = 'skill-tag';
                skillTag.innerHTML = `
                    ${skill}
                    <button type="button" onclick="removeSkill(this)">
                        <i class="bi bi-x-circle"></i>
                    </button>
                    <input type="hidden" name="skills[]" value="${skill}">
                `;
                container.appendChild(skillTag);
                input.value = '';
            }
        }

        function removeSkill(button) {
            button.closest('.skill-tag').remove();
        }

        // Allow adding skills with Enter key
        document.getElementById('skillInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addSkill();
            }
        });

        // Mobile sidebar toggle
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarBackdrop = document.getElementById('sidebarBackdrop');

        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', () => {
                sidebar.classList.toggle('show');
                document.body.classList.toggle('sidebar-open');
            });
        }

        if (sidebarBackdrop) {
            sidebarBackdrop.addEventListener('click', () => {
                sidebar.classList.remove('show');
                document.body.classList.remove('sidebar-open');
            });
        }
    </script>
</body>
</html>

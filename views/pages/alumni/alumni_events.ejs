<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/alumni.css">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (savedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
</head>
<body>

    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (savedTheme === 'dark') document.documentElement.classList.add('dark');
        })();
    </script>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="rsvpToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto" id="toastTitle">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastBody"></div>
        </div>
    </div>
    
    <div class="dashboard-layout">
        <%- include('partials/alumni-sidebar', { currentPage: 'events', alumni: alumni }) %>

        <main class="main-content">
            <div class="mobile-header d-lg-none mb-4">
                <h1 class="h2">Events</h1>
                <button class="btn btn-light" type="button" id="sidebarToggle"><i class="bi bi-list"></i></button>
            </div>
            
            <h1 class="h2 d-none d-lg-block mb-4">Community Events</h1>

            <div class="content-card mb-4 animate-on-scroll" style="--animation-order: 0;">
                <div class="aurora-glow"></div>
                <form action="/alumni-events" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-5"><label for="title" class="form-label">Search by Title</label><input type="text" class="form-control" id="title" name="title" value="<%= titleQuery %>" placeholder="e.g., Annual Meet"></div>
                    <div class="col-md-3"><label for="category" class="form-label">Category</label><select id="category" name="category" class="form-select"><option value="">All Categories</option><option value="Workshops" <%= categoryQuery === 'Workshops' ? 'selected' : '' %>>Workshops</option><option value="Alumni meetups" <%= categoryQuery === 'Alumni meetups' ? 'selected' : '' %>>Alumni meetups</option><option value="Webinars" <%= categoryQuery === 'Webinars' ? 'selected' : '' %>>Webinars</option><option value="Hackathons" <%= categoryQuery === 'Hackathons' ? 'selected' : '' %>>Hackathons</option><option value="Placements drives" <%= categoryQuery === 'Placements drives' ? 'selected' : '' %>>Placements drives</option></select></div>
                    <div class="col-md-2"><label for="status" class="form-label">Status</label><select id="status" name="status" class="form-select"><option value="">All</option><option value="Upcoming" <%= statusQuery === 'Upcoming' ? 'selected' : '' %>>Upcoming</option><option value="Completed" <%= statusQuery === 'Completed' ? 'selected' : '' %>>Completed</option></select></div>
                    <div class="col-md-2"><button type="submit" class="btn btn-primary w-100">Filter</button></div>
                </form>
            </div>

            <div class="row g-4">
                <% if(events.length > 0) { %>
                    <% events.forEach((event, index) => { %>
                        <div class="col-lg-6 col-xl-4 animate-on-scroll" style="--animation-order: <%= index + 1 %>;">
                            <div class="content-card h-100 d-flex flex-column" id="card-<%= event._id %>">
                                <div class="aurora-glow"></div>
                                <% 
                                    const isRsvpd = rsvpdEventIds.includes(event._id.toString());
                                    const statusClass = event.status === 'Upcoming' ? 'bg-success' : 'bg-secondary';
                                %>
                                <span class="badge <%= statusClass %> position-absolute top-0 end-0 m-3"><%= event.status %></span>
                                <h5 class="mb-2"><%= event.title %></h5>
                                <p class="text-muted-foreground small mb-3">Category: <%= event.category %></p>
                                <div class="mb-3">
                                    <p class="mb-1"><i class="bi bi-calendar-fill me-2"></i><strong>Date:</strong> <%= event.date %></p>
                                    <p class="mb-1"><i class="bi bi-clock-fill me-2"></i><strong>Time:</strong> <%= event.time %></p>
                                    <p class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i><strong>Venue:</strong> <%= event.venue_name %></p>
                                </div>
                                <p class="text-muted-foreground flex-grow-1"><%= event.description.replace(/(\\r|\\n|<[^>]*>)/g, " ").trim().substring(0, 100) %>...</p>
                                <button class="btn btn-light mt-auto view-details-btn" data-bs-toggle="modal" data-bs-target="#eventDetailsModal"
                                    data-event='<%- JSON.stringify(event) %>' data-is-rsvpd="<%= isRsvpd %>">
                                    <% if(isRsvpd) { %>
                                        <i class="bi bi-check-circle-fill text-success me-1"></i> Registered
                                    <% } else { %>
                                        View Details
                                    <% } %>
                                </button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12"><div class="content-card text-center"><h5 class="mb-0">No events found matching your criteria.</h5></div></div>
                <% } %>
            </div>
        </main>
    </div>

    <div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header"><h5 class="modal-title" id="modalTitle">Event Title</h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button></div>
                <div class="modal-body">
                    <p><strong>Description:</strong> <span id="modalDescription"></span></p><hr>
                    <p><strong>Organizer:</strong> <span id="modalOrganizer"></span></p>
                    <p><strong>Contact:</strong> <span id="modalContact"></span></p>
                    <p><strong>Venue:</strong> <a href="#" id="modalVenueLink" target="_blank" class="text-decoration-none"><span id="modalVenueName"></span> <i class="bi bi-box-arrow-up-right"></i></a></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="rsvpButton">RSVP Now</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toastElement = document.getElementById('rsvpToast');
            const toast = new bootstrap.Toast(toastElement);

            function showToast(title, message, isSuccess) {
                document.getElementById('toastTitle').textContent = title;
                document.getElementById('toastBody').textContent = message;
                toastElement.classList.remove('bg-success', 'bg-danger', 'text-white');
                toastElement.classList.add(isSuccess ? 'bg-success' : 'bg-danger', 'text-white');
                toast.show();
            }

            const themeMenuToggle = document.getElementById('theme-menu-toggle');
            if(themeMenuToggle) {
                themeMenuToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.documentElement.classList.toggle('dark');
                    localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
                });
            }

            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', () => sidebar.classList.toggle('show'));
            }

            const animatedElements = document.querySelectorAll('.animate-on-scroll');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, { threshold: 0.1 });
            animatedElements.forEach(el => observer.observe(el));


            const eventDetailsModal = document.getElementById('eventDetailsModal');
            const rsvpButton = document.getElementById('rsvpButton');
            let currentEventId = null;

            eventDetailsModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const eventData = JSON.parse(button.getAttribute('data-event'));
                const isRsvpd = button.getAttribute('data-is-rsvpd') === 'true';

                currentEventId = eventData._id;
                
                document.getElementById('modalTitle').textContent = eventData.title;
                document.getElementById('modalDescription').textContent = eventData.description.replace(/(\\r|\\n|<[^>]*>)/g, " ").trim();
                document.getElementById('modalOrganizer').textContent = eventData.organizer_name;
                document.getElementById('modalContact').textContent = eventData.organizer_contact;
                document.getElementById('modalVenueName').textContent = eventData.venue_name;
                document.getElementById('modalVenueLink').href = eventData.venue_link || '#';

                rsvpButton.disabled = isRsvpd || eventData.status !== 'Upcoming';
                if(isRsvpd) {
                    rsvpButton.innerHTML = `<i class="bi bi-check-circle-fill me-1"></i> Registered`;
                } else if (eventData.status !== 'Upcoming') {
                    rsvpButton.textContent = 'Event Completed';
                } else {
                    rsvpButton.textContent = 'RSVP Now';
                }
            });

            rsvpButton.addEventListener('click', async () => {
                if(!currentEventId) return;

                try {
                    const response = await fetch('/rsvp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ eventId: currentEventId })
                    });
                    const result = await response.json();
                    
                    if(result.success) {
                        showToast('Success', result.message, true);
                        rsvpButton.innerHTML = `<i class="bi bi-check-circle-fill me-1"></i> Registered`;
                        rsvpButton.disabled = true;

                        const cardButton = document.querySelector(`#card-${currentEventId} .view-details-btn`);
                        if(cardButton) {
                            cardButton.innerHTML = `<i class="bi bi-check-circle-fill text-success me-1"></i> Registered`;
                            cardButton.setAttribute('data-is-rsvpd', 'true');
                        }
                    } else {
                        showToast('Error', result.message, false);
                    }
                } catch (error) {
                    showToast('Error', 'An unexpected error occurred.', false);
                }
            });
        });
    </script>
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect - Messaging | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/alumni.css">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (savedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
</head>
<body>
    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer" role="alert" aria-live="polite" aria-atomic="true"></div>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/alumni-sidebar', { currentPage: 'connect', alumni: alumni }) %>

        <main class="main-content p-0" style="overflow-x: hidden; max-width: 100%;">
            <div class="row g-0" style="margin: 0; width: 100%; max-width: 100%;">
                <!-- Chat List Sidebar -->
                <div class="col-md-4 col-lg-3 chat-sidebar" style="overflow-x: hidden;">
                    <div class="p-3 border-bottom">
                        <h5 class="mb-3">Messages</h5>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search conversations...">
                        </div>
                        <div class="btn-group btn-group-sm w-100">
                            <button class="btn btn-outline-primary active">All</button>
                            <button class="btn btn-outline-primary">Students</button>
                            <button class="btn btn-outline-primary">Alumni</button>
                        </div>
                    </div>
                    
                    <div class="chat-list-item active" onclick="openChat(1)">
                        <div class="d-flex align-items-center">
                            <div class="position-relative">
                                <img src="https://ui-avatars.com/api/?name=Ankit+Sharma&background=random" class="rounded-circle me-3" width="50" height="50">
                                <span class="online-indicator position-absolute bottom-0 end-0 me-3"></span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Ankit Sharma</h6>
                                    <small class="text-muted-foreground">5m ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">Thank you for the guidance!</p>
                                <span class="badge bg-primary badge-sm">Mentee</span>
                            </div>
                        </div>
                    </div>

                    <div class="chat-list-item" onclick="openChat(2)">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=Vikram+Singh&background=random" class="rounded-circle me-3" width="50" height="50">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Vikram Singh</h6>
                                    <small class="text-muted-foreground">1h ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">Sure, let's catch up this weekend</p>
                                <span class="badge bg-success badge-sm">Alumni</span>
                            </div>
                        </div>
                    </div>

                    <div class="chat-list-item" onclick="openChat(3)">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=Priya+Reddy&background=random" class="rounded-circle me-3" width="50" height="50">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Priya Reddy</h6>
                                    <small class="text-muted-foreground">3h ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">Looking forward to the event!</p>
                                <span class="badge bg-primary badge-sm">Student</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="col-md-8 col-lg-9" style="overflow-x: hidden;">
                    <div class="chat-area" style="overflow-x: hidden;">
                        <!-- Chat Header -->
                        <div class="p-3 border-bottom" style="background-color: var(--card);">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="position-relative">
                                        <img src="https://ui-avatars.com/api/?name=Ankit+Sharma&background=random" class="rounded-circle me-3" width="45" height="45">
                                        <span class="online-indicator position-absolute bottom-0 end-0 me-3"></span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Ankit Sharma</h6>
                                        <small class="text-success"><span class="online-indicator me-1"></span>Online</small>
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-light" onclick="videoCall()">
                                        <i class="bi bi-camera-video"></i>
                                    </button>
                                    <button class="btn btn-sm btn-light" onclick="voiceCall()">
                                        <i class="bi bi-telephone"></i>
                                    </button>
                                    <button class="btn btn-sm btn-light" onclick="chatOptions()">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Messages Container -->
                        <div class="messages-container" id="messagesContainer">
                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">Hi! Thanks for accepting my mentorship request.</p>
                                    <small class="text-muted-foreground">10:00 AM</small>
                                </div>
                            </div>
                            
                            <div class="message sent">
                                <div class="message-bubble">
                                    <p class="mb-1">You're welcome! Happy to help. What specific areas are you interested in?</p>
                                    <small class="opacity-75">10:05 AM</small>
                                </div>
                            </div>

                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">I'm preparing for product-based companies. Need guidance on system design and DSA.</p>
                                    <small class="text-muted-foreground">10:08 AM</small>
                                </div>
                            </div>

                            <div class="message sent">
                                <div class="message-bubble">
                                    <p class="mb-1">Great! I can definitely help with that. Let's schedule our first session this weekend?</p>
                                    <small class="opacity-75">10:10 AM</small>
                                </div>
                            </div>

                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">Thank you for the guidance! That would be perfect.</p>
                                    <small class="text-muted-foreground">Just now</small>
                                </div>
                            </div>
                        </div>

                        <!-- Message Input -->
                        <div class="p-3 border-top">
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" onclick="attachFile()">
                                    <i class="bi bi-paperclip"></i>
                                </button>
                                <input type="text" class="form-control" id="messageInput" placeholder="Type a message..." onkeypress="handleKeyPress(event)">
                                <button class="btn btn-primary" onclick="sendMessage()">
                                    <i class="bi bi-send"></i> Send
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('partials/footer') %>
    <script>
        function openChat(userId) {
            const items = document.querySelectorAll('.chat-list-item');
            items.forEach(item => item.classList.remove('active'));
            event.currentTarget.classList.add('active');
            AlumniumUtils.showToast('Loading conversation...', 'info');
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (!message) return;

            const messagesContainer = document.getElementById('messagesContainer');
            const now = new Date();
            const time = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            
            const messageHTML = `
                <div class="message sent">
                    <div class="message-bubble">
                        <p class="mb-1">${message}</p>
                        <small class="opacity-75">${time}</small>
                    </div>
                </div>
            `;
            
            messagesContainer.insertAdjacentHTML('beforeend', messageHTML);
            input.value = '';
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            AlumniumUtils.showToast('Message sent!', 'success');
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function attachFile() {
            AlumniumUtils.showToast('File attachment feature coming soon!', 'info');
        }

        function videoCall() {
            AlumniumUtils.showToast('Starting video call...', 'info');
        }

        function voiceCall() {
            AlumniumUtils.showToast('Starting voice call...', 'info');
        }

        function chatOptions() {
            AlumniumUtils.showToast('Opening chat options...', 'info');
        }

        document.addEventListener('DOMContentLoaded', () => {
            const messagesContainer = document.getElementById('messagesContainer');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });
    </script>
</body>
</html>

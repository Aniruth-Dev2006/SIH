        function closeCampaign(id) {
            if (confirm('Are you sure you want to close this campaign?')) {
                AlumniumUtils.showToast('Campaign closed successfully', 'success');
            }
        }

        function sendThankYou(id) {
            AlumniumUtils.showToast('Thank you email sent to donor!', 'success');
        }

        function exportDonations() {
            AlumniumUtils.showToast('Exporting donation data...', 'info');
            setTimeout(() => {
                AlumniumUtils.showToast('Export completed! Check your downloads.', 'success');
            }, 1500);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const themeToggle = document.getElementById('theme-menu-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    const html = document.documentElement;
                    const newTheme = html.classList.contains('dark') ? 'light' : 'dark';
                    localStorage.setItem('theme', newTheme);
                    html.classList.toggle('dark');
                    AlumniumUtils.showToast('Theme changed to ' + newTheme + ' mode', 'success');
                });
            }


            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebarBackdrop');

            if (sidebarToggle && sidebar && backdrop) {

            if (sidebarToggle) {

                sidebarToggle.addEventListener('click', () => {
                    sidebar.classList.add('show');
                    document.body.classList.add('sidebar-open');
                });
                backdrop.addEventListener('click', () => {
                    sidebar.classList.remove('show');
                    document.body.classList.remove('sidebar-open');
                });
            }
        });
    </script>

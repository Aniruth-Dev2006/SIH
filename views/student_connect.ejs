<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connect - Messaging | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/create_student.css">
    <style>
        .chat-sidebar { border-right: 1px solid var(--border); height: calc(100vh - 80px); overflow-y: auto; }
        .chat-list-item { cursor: pointer; transition: background 0.2s; padding: 12px; border-bottom: 1px solid var(--border); }
        .chat-list-item:hover, .chat-list-item.active { background: var(--muted); }
        .chat-area { height: calc(100vh - 160px); display: flex; flex-direction: column; }
        .messages-container { flex: 1; overflow-y: auto; padding: 20px; }
        .message { margin-bottom: 16px; display: flex; }
        .message.sent { justify-content: flex-end; }
        .message.received { justify-content: flex-start; }
        .message-bubble { max-width: 60%; padding: 10px 15px; border-radius: 12px; }
        .message.sent .message-bubble { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
        .message.received .message-bubble { background: var(--muted); }
        .online-indicator { width: 10px; height: 10px; background: #10b981; border-radius: 50%; display: inline-block; }
    </style>
</head>
<body>
    <div class="toast-container" id="toastContainer"></div>
    <%- include('partials/header') %>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/sidebar', { role: 'student' }) %>

        <main class="main-content p-0">
            <div class="row g-0">
                <!-- Chat List Sidebar -->
                <div class="col-md-4 col-lg-3 chat-sidebar">
                    <div class="p-3 border-bottom">
                        <h5 class="mb-3">Messages</h5>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search conversations...">
                        </div>
                    </div>
                    
                    <div class="chat-list-item active" onclick="openChat(1)">
                        <div class="d-flex align-items-center">
                            <div class="position-relative">
                                <img src="https://ui-avatars.com/api/?name=Rajesh+Kumar&background=random" class="rounded-circle me-3" width="50" height="50">
                                <span class="online-indicator position-absolute bottom-0 end-0 me-3"></span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Rajesh Kumar</h6>
                                    <small class="text-muted-foreground">2m ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">That sounds great! Let's discuss...</p>
                            </div>
                        </div>
                    </div>

                    <div class="chat-list-item" onclick="openChat(2)">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=Priya+Sharma&background=random" class="rounded-circle me-3" width="50" height="50">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Priya Sharma</h6>
                                    <small class="text-muted-foreground">1h ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">Thanks for the help with the project</p>
                            </div>
                        </div>
                    </div>

                    <div class="chat-list-item" onclick="openChat(3)">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name=Amit+Verma&background=random" class="rounded-circle me-3" width="50" height="50">
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">Amit Verma</h6>
                                    <small class="text-muted-foreground">2h ago</small>
                                </div>
                                <p class="mb-0 small text-muted-foreground text-truncate">See you at the event tomorrow!</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chat Area -->
                <div class="col-md-8 col-lg-9">
                    <div class="chat-area">
                        <!-- Chat Header -->
                        <div class="p-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="position-relative">
                                        <img src="https://ui-avatars.com/api/?name=Rajesh+Kumar&background=random" class="rounded-circle me-3" width="45" height="45">
                                        <span class="online-indicator position-absolute bottom-0 end-0 me-3"></span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Rajesh Kumar</h6>
                                        <small class="text-success"><span class="online-indicator me-1"></span>Online</small>
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-light" onclick="videoCall()">
                                        <i class="bi bi-camera-video"></i>
                                    </button>
                                    <button class="btn btn-sm btn-light" onclick="voiceCall()">
                                        <i class="bi bi-telephone"></i>
                                    </button>
                                    <button class="btn btn-sm btn-light" onclick="chatOptions()">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Messages Container -->
                        <div class="messages-container" id="messagesContainer">
                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">Hey! How's the project going?</p>
                                    <small class="text-muted-foreground">10:30 AM</small>
                                </div>
                            </div>
                            
                            <div class="message sent">
                                <div class="message-bubble">
                                    <p class="mb-1">Going great! Just finished the backend integration.</p>
                                    <small class="opacity-75">10:32 AM</small>
                                </div>
                            </div>

                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">That's awesome! Need any help with the frontend?</p>
                                    <small class="text-muted-foreground">10:35 AM</small>
                                </div>
                            </div>

                            <div class="message sent">
                                <div class="message-bubble">
                                    <p class="mb-1">Yes! That would be really helpful. Can we schedule a call tomorrow?</p>
                                    <small class="opacity-75">10:36 AM</small>
                                </div>
                            </div>

                            <div class="message received">
                                <div class="message-bubble">
                                    <p class="mb-1">That sounds great! Let's discuss the details.</p>
                                    <small class="text-muted-foreground">Just now</small>
                                </div>
                            </div>
                        </div>

                        <!-- Message Input -->
                        <div class="p-3 border-top">
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" onclick="attachFile()">
                                    <i class="bi bi-paperclip"></i>
                                </button>
                                <input type="text" class="form-control" id="messageInput" placeholder="Type a message..." onkeypress="handleKeyPress(event)">
                                <button class="btn btn-primary" onclick="sendMessage()">
                                    <i class="bi bi-send"></i> Send
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('partials/footer') %>
    <script>
        function openChat(userId) {
            const items = document.querySelectorAll('.chat-list-item');
            items.forEach(item => item.classList.remove('active'));
            event.currentTarget.classList.add('active');
            AlumniumUtils.showToast('Loading conversation...', 'info');
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            if (!message) return;

            const messagesContainer = document.getElementById('messagesContainer');
            const now = new Date();
            const time = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            
            const messageHTML = `
                <div class="message sent">
                    <div class="message-bubble">
                        <p class="mb-1">${message}</p>
                        <small class="opacity-75">${time}</small>
                    </div>
                </div>
            `;
            
            messagesContainer.insertAdjacentHTML('beforeend', messageHTML);
            input.value = '';
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            AlumniumUtils.showToast('Message sent!', 'success');
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function attachFile() {
            AlumniumUtils.showToast('File attachment feature coming soon!', 'info');
        }

        function videoCall() {
            AlumniumUtils.showToast('Starting video call...', 'info');
        }

        function voiceCall() {
            AlumniumUtils.showToast('Starting voice call...', 'info');
        }

        function chatOptions() {
            AlumniumUtils.showToast('Opening chat options...', 'info');
        }

        // Auto-scroll to bottom on load
        document.addEventListener('DOMContentLoaded', () => {
            const messagesContainer = document.getElementById('messagesContainer');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });
    </script>
</body>
</html>

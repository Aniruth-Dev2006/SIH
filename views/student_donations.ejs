<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/create_student.css">
    <style>
        .campaign-card { transition: all 0.3s; cursor: pointer; }
        .campaign-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1); }
        .impact-stat { text-align: center; padding: 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 12px; }
    </style>
</head>
<body>
    <div class="toast-container" id="toastContainer"></div>
    <%- include('partials/header') %>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/sidebar', { role: 'student' }) %>

        <main class="main-content">
            <h1 class="h2 mb-4">Make a Difference - Donate</h1>

            <!-- Impact Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="impact-stat">
                        <h2 class="mb-1">₹84.2L</h2>
                        <p class="mb-0 opacity-75">Total Raised This Year</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="impact-stat">
                        <h2 class="mb-1">342</h2>
                        <p class="mb-0 opacity-75">Active Donors</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="impact-stat">
                        <h2 class="mb-1">₹1,245</h2>
                        <p class="mb-0 opacity-75">Your Contributions</p>
                    </div>
                </div>
            </div>

            <!-- My Donation History -->
            <div class="content-card mb-4">
                <h5 class="mb-3">My Donation History</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Campaign</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Scholarship Fund 2025</td>
                                <td class="fw-bold text-success">₹500</td>
                                <td>Aug 15, 2025</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td><button class="btn btn-sm btn-outline-primary" onclick="downloadReceipt(1)"><i class="bi bi-download"></i> Download</button></td>
                            </tr>
                            <tr>
                                <td>Infrastructure Development</td>
                                <td class="fw-bold text-success">₹745</td>
                                <td>Jul 22, 2025</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td><button class="btn btn-sm btn-outline-primary" onclick="downloadReceipt(2)"><i class="bi bi-download"></i> Download</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Active Campaigns -->
            <div class="content-card mb-4">
                <h5 class="mb-3">Active Campaigns</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card campaign-card" onclick="showDonateModal(1, 'Scholarship Fund 2025')">
                            <div class="card-body">
                                <h6 class="card-title">Scholarship Fund 2025</h6>
                                <p class="text-muted-foreground small mb-3">Help deserving students pursue their education without financial constraints.</p>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-success" style="width: 68%"></div>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="text-muted-foreground">₹34L raised of ₹50L goal</small>
                                    <strong class="text-success">68%</strong>
                                </div>
                                <button class="btn btn-primary w-100" onclick="event.stopPropagation(); showDonateModal(1, 'Scholarship Fund 2025')">
                                    <i class="bi bi-heart-fill me-2"></i>Donate Now
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card campaign-card" onclick="showDonateModal(2, 'Infrastructure Development')">
                            <div class="card-body">
                                <h6 class="card-title">Infrastructure Development</h6>
                                <p class="text-muted-foreground small mb-3">Upgrade labs and facilities to provide world-class learning environment.</p>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-primary" style="width: 45%"></div>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="text-muted-foreground">₹45L raised of ₹1Cr goal</small>
                                    <strong class="text-primary">45%</strong>
                                </div>
                                <button class="btn btn-primary w-100" onclick="event.stopPropagation(); showDonateModal(2, 'Infrastructure Development')">
                                    <i class="bi bi-heart-fill me-2"></i>Donate Now
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card campaign-card" onclick="showDonateModal(3, 'Student Innovation Lab')">
                            <div class="card-body">
                                <h6 class="card-title">Student Innovation Lab</h6>
                                <p class="text-muted-foreground small mb-3">Create a dedicated space for students to work on innovative projects.</p>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-warning" style="width: 22%"></div>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="text-muted-foreground">₹11L raised of ₹50L goal</small>
                                    <strong class="text-warning">22%</strong>
                                </div>
                                <button class="btn btn-primary w-100" onclick="event.stopPropagation(); showDonateModal(3, 'Student Innovation Lab')">
                                    <i class="bi bi-heart-fill me-2"></i>Donate Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Donate Modal -->
    <div class="modal fade" id="donateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="donateModalTitle">Make a Donation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="donationForm">
                        <div class="mb-3">
                            <label class="form-label">Select Amount</label>
                            <div class="btn-group w-100 mb-2" role="group">
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(100)">₹100</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(500)">₹500</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(1000)">₹1,000</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(5000)">₹5,000</button>
                            </div>
                            <input type="number" class="form-control" id="donationAmount" placeholder="Or enter custom amount" min="1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod">
                                <option>UPI</option>
                                <option>Credit/Debit Card</option>
                                <option>Net Banking</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anonymous">
                                <label class="form-check-label" for="anonymous">
                                    Make this donation anonymous
                                </label>
                            </div>
                        </div>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            You will receive a tax-exemption receipt via email.
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="processDonation()">
                        <i class="bi bi-credit-card me-2"></i>Proceed to Payment
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script>
        let currentCampaignId = null;

        function showDonateModal(campaignId, campaignName) {
            currentCampaignId = campaignId;
            document.getElementById('donateModalTitle').textContent = `Donate to ${campaignName}`;
            new bootstrap.Modal(document.getElementById('donateModal')).show();
        }

        function setAmount(amount) {
            document.getElementById('donationAmount').value = amount;
        }

        function processDonation() {
            const amount = document.getElementById('donationAmount').value;
            if (!amount || amount < 1) {
                AlumniumUtils.showToast('Please enter a valid amount', 'error');
                return;
            }
            
            AlumniumUtils.showToast('Processing payment of ₹' + amount + '...', 'info');
            
            setTimeout(() => {
                AlumniumUtils.showToast('Donation successful! Thank you for your contribution!', 'success');
                bootstrap.Modal.getInstance(document.getElementById('donateModal')).hide();
                setTimeout(() => location.reload(), 1500);
            }, 2000);
        }

        function downloadReceipt(id) {
            AlumniumUtils.showToast('Downloading receipt...', 'info');
            setTimeout(() => {
                AlumniumUtils.showToast('Receipt downloaded successfully!', 'success');
            }, 1000);
        }
    </script>
</body>
</html>

<!-- Sidebar for <%= role || 'User' %> -->
<aside class="sidebar" id="sidebar" role="navigation" aria-label="Main navigation">
    <a href="/<%= role === 'admin' ? 'admin' : role === 'Student' ? 'student-dashboard' : 'alumni-dashboard' %>" class="sidebar-header">
        <i class="bi bi-link-45deg"></i> 
        <span>Alumnium</span>
    </a>
    
    <nav class="sidebar-nav">
        <ul class="nav flex-column" role="menu">
            <% if (role === 'admin') { %>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/admin" role="menuitem">
                        <i class="bi bi-grid-1x2-fill"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'user-management' ? 'active' : '' %>" href="/user_management" role="menuitem">
                        <i class="bi bi-people-fill"></i> User Management
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'all-users' ? 'active' : '' %>" href="/all_users" role="menuitem">
                        <i class="bi bi-person-lines-fill"></i> All Users
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'pending-requests' ? 'active' : '' %>" href="/pending-requests" role="menuitem">
                        <i class="bi bi-hourglass-split"></i> Pending Requests
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'announcements' ? 'active' : '' %>" href="/announcements" role="menuitem">
                        <i class="bi bi-megaphone-fill"></i> Announcements
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'events' ? 'active' : '' %>" href="/events" role="menuitem">
                        <i class="bi bi-calendar-event-fill"></i> Events
                    </a>
                </li>
            <% } else if (role === 'Student') { %>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/student-dashboard" role="menuitem">
                        <i class="bi bi-grid-1x2-fill"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'announcements' ? 'active' : '' %>" href="/student-announcements" role="menuitem">
                        <i class="bi bi-megaphone-fill"></i> Announcements
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'events' ? 'active' : '' %>" href="/student-events" role="menuitem">
                        <i class="bi bi-calendar-event-fill"></i> Events
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'jobs' ? 'active' : '' %>" href="/student-jobs" role="menuitem">
                        <i class="bi bi-briefcase-fill"></i> Jobs
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'marketplace' ? 'active' : '' %>" href="/student-marketplace" role="menuitem">
                        <i class="bi bi-shop"></i> Marketplace
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'leaderboard' ? 'active' : '' %>" href="/student-leaderboard" role="menuitem">
                        <i class="bi bi-trophy-fill"></i> Leaderboard
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'career-hub' ? 'active' : '' %>" href="/student-career-hub" role="menuitem">
                        <i class="bi bi-rocket-takeoff-fill"></i> Career Hub
                    </a>
                </li>
            <% } else { %>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/alumni-dashboard" role="menuitem">
                        <i class="bi bi-grid-1x2-fill"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'announcements' ? 'active' : '' %>" href="/alumni-announcements" role="menuitem">
                        <i class="bi bi-megaphone-fill"></i> Announcements
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'events' ? 'active' : '' %>" href="/alumni-events" role="menuitem">
                        <i class="bi bi-calendar-event-fill"></i> Events
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'jobs' ? 'active' : '' %>" href="/alumni-jobs" role="menuitem">
                        <i class="bi bi-briefcase-fill"></i> Jobs
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'marketplace' ? 'active' : '' %>" href="/alumni-marketplace" role="menuitem">
                        <i class="bi bi-shop"></i> Marketplace
                    </a>
                </li>
                <li class="nav-item" role="none">
                    <a class="nav-link <%= currentPage === 'leaderboard' ? 'active' : '' %>" href="/leaderboard" role="menuitem">
                        <i class="bi bi-trophy-fill"></i> Leaderboard
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <div class="d-flex align-items-center justify-content-between">
            <div class="user-profile">
                <img src="https://ui-avatars.com/api/?name=<%= typeof userName !== 'undefined' ? encodeURIComponent(userName) : (typeof userEmail !== 'undefined' ? encodeURIComponent(userEmail) : 'User') %>&background=random" 
                     alt="User Avatar" 
                     class="user-avatar">
                <div class="user-info">
                    <div class="user-name" style="font-weight: 600; font-size: 14px; color: var(--foreground);">
                        <%= typeof userName !== 'undefined' ? userName : (typeof userEmail !== 'undefined' ? userEmail.split('@')[0] : 'User') %>
                    </div>
                    <div class="user-role" style="font-size: 12px; color: var(--muted-foreground);">
                        <%= role || 'User' %>
                    </div>
                </div>
            </div>
            
            <div class="dropdown">
                <button class="profile-menu-trigger" 
                        type="button" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false"
                        aria-label="User menu">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <button class="dropdown-item" type="button" onclick="ThemeManager.toggle()">
                            <i class="bi bi-moon-stars-fill me-2"></i>
                            <span class="theme-text">Toggle Theme</span>
                        </button>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" href="/logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</aside>

<style>
    .sidebar {
        background-color: var(--card);
        border-right: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        transition: transform 0.3s ease-in-out;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 280px;
        z-index: 1050;
        overflow-y: auto;
    }

    .sidebar-header {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--foreground);
        text-decoration: none;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: opacity 0.2s;
    }

    .sidebar-header:hover {
        opacity: 0.8;
    }

    .sidebar-nav {
        flex-grow: 1;
        overflow-y: auto;
        margin-bottom: 1.5rem;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .sidebar-nav::-webkit-scrollbar {
        display: none;
    }

    .sidebar-nav .nav-link {
        color: var(--muted-foreground);
        font-weight: 500;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        margin-bottom: 0.25rem;
        display: flex;
        align-items: center;
        font-size: 14px;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .sidebar-nav .nav-link i {
        margin-right: 0.75rem;
        font-size: 1.1rem;
    }

    .sidebar-nav .nav-link:hover {
        color: var(--foreground);
        background-color: var(--secondary);
    }

    .sidebar-nav .nav-link.active {
        color: var(--primary-foreground);
        background-color: var(--primary);
    }

    .sidebar-footer {
        margin-top: auto;
        border-top: 1px solid var(--border);
        padding-top: 1.5rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.75rem;
    }

    .profile-menu-trigger {
        color: var(--muted-foreground);
        background: none;
        border: none;
        padding: 0.5rem;
        margin-left: 0.5rem;
        border-radius: 0.5rem;
        height: 40px;
        width: 40px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    .profile-menu-trigger:hover {
        background-color: var(--secondary);
        color: var(--foreground);
    }

    @media (max-width: 991.98px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }
    }
</style>

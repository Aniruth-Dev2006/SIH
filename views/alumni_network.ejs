<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Network | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/alumni.css">
</head>
<body>
    <div class="toast-container" id="toastContainer"></div>
    <%- include('partials/header') %>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/alumni-sidebar', { currentPage: 'network', alumni: alumni }) %>

        <main class="main-content">
            <h1 class="h2 mb-4">Professional Network</h1>

            <!-- Search and Filter -->
            <div class="content-card mb-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search by name, company, batch...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option>All Alumni</option>
                            <option>Same Batch</option>
                            <option>Same Department</option>
                            <option>Same Company</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option>All Locations</option>
                            <option>Bangalore</option>
                            <option>Mumbai</option>
                            <option>Delhi</option>
                            <option>Hyderabad</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Network Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h3 class="text-primary mb-1">156</h3>
                        <p class="text-muted-foreground mb-0">Total Connections</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h3 class="text-success mb-1">89</h3>
                        <p class="text-muted-foreground mb-0">Alumni Network</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h3 class="text-info mb-1">67</h3>
                        <p class="text-muted-foreground mb-0">Student Mentees</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h3 class="text-warning mb-1">8</h3>
                        <p class="text-muted-foreground mb-0">Pending Requests</p>
                    </div>
                </div>
            </div>

            <!-- Connection Requests -->
            <div class="content-card mb-4">
                <h5 class="mb-3">Pending Requests</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="card user-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Arjun+Reddy&background=random" class="rounded-circle mb-2" width="70" height="70">
                                <h6 class="mb-1">Arjun Reddy</h6>
                                <p class="text-muted-foreground small mb-2">CSE - Semester 8</p>
                                <p class="small mb-3">Wants to connect for career guidance</p>
                                <div class="d-flex gap-2 justify-content-center">
                                    <button class="btn btn-sm btn-primary" onclick="acceptConnection(1)">Accept</button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="declineConnection(1)">Decline</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- My Network -->
            <div class="content-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">My Connections</h5>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-primary active">All</button>
                        <button class="btn btn-outline-primary">Alumni</button>
                        <button class="btn btn-outline-primary">Students</button>
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card user-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Vikram+Singh&background=random" class="rounded-circle mb-2" width="70" height="70">
                                <h6 class="mb-1">Vikram Singh</h6>
                                <p class="text-muted-foreground small mb-1">Tech Lead @ Amazon</p>
                                <span class="badge bg-success mb-2">Alumni - 2018</span>
                                <div class="d-flex gap-1 justify-content-center">
                                    <button class="btn btn-sm btn-primary" onclick="sendMessage(1)">
                                        <i class="bi bi-chat-dots"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="viewProfile(1)">
                                        <i class="bi bi-person"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="recommend(1)">
                                        <i class="bi bi-hand-thumbs-up"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card user-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Neha+Kapoor&background=random" class="rounded-circle mb-2" width="70" height="70">
                                <h6 class="mb-1">Neha Kapoor</h6>
                                <p class="text-muted-foreground small mb-1">Product Manager @ Google</p>
                                <span class="badge bg-success mb-2">Alumni - 2019</span>
                                <div class="d-flex gap-1 justify-content-center">
                                    <button class="btn btn-sm btn-primary" onclick="sendMessage(2)">
                                        <i class="bi bi-chat-dots"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="viewProfile(2)">
                                        <i class="bi bi-person"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="recommend(2)">
                                        <i class="bi bi-hand-thumbs-up"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card user-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Rahul+Sharma&background=random" class="rounded-circle mb-2" width="70" height="70">
                                <h6 class="mb-1">Rahul Sharma</h6>
                                <p class="text-muted-foreground small mb-1">CSE - Semester 6</p>
                                <span class="badge bg-info mb-2">Student</span>
                                <div class="d-flex gap-1 justify-content-center">
                                    <button class="btn btn-sm btn-primary" onclick="sendMessage(3)">
                                        <i class="bi bi-chat-dots"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="viewProfile(3)">
                                        <i class="bi bi-person"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="offerMentorship(3)">
                                        <i class="bi bi-award"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card user-card">
                            <div class="card-body text-center">
                                <img src="https://ui-avatars.com/api/?name=Priya+Patel&background=random" class="rounded-circle mb-2" width="70" height="70">
                                <h6 class="mb-1">Priya Patel</h6>
                                <p class="text-muted-foreground small mb-1">Data Scientist @ Meta</p>
                                <span class="badge bg-success mb-2">Alumni - 2020</span>
                                <div class="d-flex gap-1 justify-content-center">
                                    <button class="btn btn-sm btn-primary" onclick="sendMessage(4)">
                                        <i class="bi bi-chat-dots"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="viewProfile(4)">
                                        <i class="bi bi-person"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="recommend(4)">
                                        <i class="bi bi-hand-thumbs-up"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-outline-primary">Load More Connections</button>
                </div>
            </div>
        </main>
    </div>

    <%- include('partials/footer') %>
    <script>
        function acceptConnection(id) {
            AlumniumUtils.showToast('Connection request accepted!', 'success');
            setTimeout(() => location.reload(), 1000);
        }

        function declineConnection(id) {
            AlumniumUtils.showToast('Connection request declined', 'info');
            setTimeout(() => location.reload(), 1000);
        }

        function sendMessage(id) {
            window.location.href = '/alumni-connect?user=' + id;
        }

        function viewProfile(id) {
            AlumniumUtils.showToast('Opening profile...', 'info');
        }

        function recommend(id) {
            AlumniumUtils.showToast('Recommendation sent!', 'success');
        }

        function offerMentorship(id) {
            AlumniumUtils.showToast('Mentorship offer sent!', 'success');
        }
    </script>
</body>
</html>

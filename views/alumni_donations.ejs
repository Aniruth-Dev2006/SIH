<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate | Alumnium</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/alumni.css">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            if (savedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
</head>
<body>
    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer" role="alert" aria-live="polite" aria-atomic="true"></div>

    <div class="sidebar-backdrop" id="sidebarBackdrop"></div>
    <div class="dashboard-layout">
        <%- include('partials/alumni-sidebar', { currentPage: 'donations', alumni: alumni }) %>

        <main class="main-content">
            <h1 class="h2 mb-4">Give Back to Your Alma Mater</h1>

            <!-- Impact Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-3">
                    <div class="impact-stat">
                        <h2 class="mb-1">₹84.2L</h2>
                        <p class="mb-0 opacity-75">Total Raised This Year</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="impact-stat">
                        <h2 class="mb-1">342</h2>
                        <p class="mb-0 opacity-75">Active Donors</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h6 class="text-muted-foreground">Your Contributions</h6>
                        <h2 class="mb-1 text-success">₹25,000</h2>
                        <span class="donor-badge"><i class="bi bi-award-fill me-1"></i>Gold Donor</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="content-card text-center">
                        <h6 class="text-muted-foreground">Students Helped</h6>
                        <h2 class="mb-1">12</h2>
                        <small class="text-muted-foreground">Through scholarships</small>
                    </div>
                </div>
            </div>

            <!-- My Donation History -->
            <div class="content-card mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">My Donation History</h5>
                    <button class="btn btn-sm btn-outline-primary" onclick="exportHistory()">
                        <i class="bi bi-download me-1"></i>Export
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Campaign</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Impact</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Scholarship Fund 2025</td>
                                <td class="fw-bold text-success">₹10,000</td>
                                <td>Aug 15, 2025</td>
                                <td><small class="text-success">Helped 2 students</small></td>
                                <td><button class="btn btn-sm btn-outline-primary" onclick="downloadReceipt(1)"><i class="bi bi-download"></i></button></td>
                            </tr>
                            <tr>
                                <td>Infrastructure Development</td>
                                <td class="fw-bold text-success">₹15,000</td>
                                <td>Jul 22, 2025</td>
                                <td><small class="text-success">Lab equipment purchased</small></td>
                                <td><button class="btn btn-sm btn-outline-primary" onclick="downloadReceipt(2)"><i class="bi bi-download"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Tax Benefits Alert -->
            <div class="alert alert-info mb-4">
                <div class="d-flex align-items-start">
                    <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                    <div>
                        <h6 class="mb-1">Tax Benefits Available</h6>
                        <p class="mb-0 small">All donations are eligible for 80G tax deductions. You'll receive tax-exemption receipts via email within 48 hours.</p>
                    </div>
                </div>
            </div>

            <!-- Active Campaigns -->
            <div class="content-card mb-4">
                <h5 class="mb-3">Support Active Campaigns</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="card campaign-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title">Scholarship Fund 2025</h6>
                                    <span class="badge bg-success">Trending</span>
                                </div>
                                <p class="text-muted-foreground small mb-3">Help deserving students pursue their education without financial constraints. Your contribution directly supports students from economically weaker sections.</p>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-success" style="width: 68%"></div>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="text-muted-foreground">₹34L raised of ₹50L goal</small>
                                    <strong class="text-success">68%</strong>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted-foreground">
                                        <i class="bi bi-people-fill me-1"></i>156 donors • 
                                        <i class="bi bi-clock ms-2 me-1"></i>15 days left
                                    </small>
                                </div>
                                <button class="btn btn-primary w-100" onclick="showDonateModal(1, 'Scholarship Fund 2025')">
                                    <i class="bi bi-heart-fill me-2"></i>Donate Now
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card campaign-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title">Infrastructure Development</h6>
                                    <span class="badge bg-primary">Priority</span>
                                </div>
                                <p class="text-muted-foreground small mb-3">Upgrade labs and facilities to provide world-class learning environment. Funds will be used for new computer labs and research equipment.</p>
                                <div class="progress mb-2" style="height: 10px;">
                                    <div class="progress-bar bg-primary" style="width: 45%"></div>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <small class="text-muted-foreground">₹45L raised of ₹1Cr goal</small>
                                    <strong class="text-primary">45%</strong>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted-foreground">
                                        <i class="bi bi-people-fill me-1"></i>89 donors • 
                                        <i class="bi bi-clock ms-2 me-1"></i>30 days left
                                    </small>
                                </div>
                                <button class="btn btn-primary w-100" onclick="showDonateModal(2, 'Infrastructure Development')">
                                    <i class="bi bi-heart-fill me-2"></i>Donate Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recurring Donation -->
            <div class="content-card">
                <h5 class="mb-3">Set Up Recurring Donations</h5>
                <div class="alert alert-light border">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h6 class="mb-2">Make a Lasting Impact</h6>
                            <p class="mb-0 small text-muted-foreground">
                                Set up a monthly donation to continuously support our institution. Even small monthly contributions add up to make a significant difference.
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <button class="btn btn-primary" onclick="setupRecurring()">
                                <i class="bi bi-repeat me-2"></i>Setup Monthly Donation
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Donate Modal -->
    <div class="modal fade" id="donateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="donateModalTitle">Make a Donation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="donationForm">
                        <div class="mb-3">
                            <label class="form-label">Select Amount</label>
                            <div class="btn-group w-100 mb-2" role="group">
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(1000)">₹1,000</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(5000)">₹5,000</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(10000)">₹10,000</button>
                                <button type="button" class="btn btn-outline-primary" onclick="setAmount(25000)">₹25,000</button>
                            </div>
                            <input type="number" class="form-control" id="donationAmount" placeholder="Or enter custom amount" min="100">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod">
                                <option>UPI</option>
                                <option>Credit/Debit Card</option>
                                <option>Net Banking</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anonymous">
                                <label class="form-check-label" for="anonymous">
                                    Make this donation anonymous
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="taxReceipt" checked>
                                <label class="form-check-label" for="taxReceipt">
                                    Send me 80G tax-exemption receipt
                                </label>
                            </div>
                        </div>
                        <div class="alert alert-success">
                            <i class="bi bi-shield-check me-2"></i>
                            Your donation is secure and will be used as per the campaign objective.
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="processDonation()">
                        <i class="bi bi-credit-card me-2"></i>Proceed to Payment
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script>
        let currentCampaignId = null;

        function showDonateModal(campaignId, campaignName) {
            currentCampaignId = campaignId;
            document.getElementById('donateModalTitle').textContent = `Donate to ${campaignName}`;
            new bootstrap.Modal(document.getElementById('donateModal')).show();
        }

        function setAmount(amount) {
            document.getElementById('donationAmount').value = amount;
        }

        function processDonation() {
            const amount = document.getElementById('donationAmount').value;
            if (!amount || amount < 100) {
                AlumniumUtils.showToast('Please enter a valid amount (minimum ₹100)', 'error');
                return;
            }
            
            AlumniumUtils.showToast('Processing payment of ₹' + amount + '...', 'info');
            
            setTimeout(() => {
                AlumniumUtils.showToast('Donation successful! Thank you for your generosity!', 'success');
                bootstrap.Modal.getInstance(document.getElementById('donateModal')).hide();
                setTimeout(() => location.reload(), 1500);
            }, 2000);
        }

        function downloadReceipt(id) {
            AlumniumUtils.showToast('Downloading tax-exemption receipt...', 'info');
            setTimeout(() => {
                AlumniumUtils.showToast('Receipt downloaded successfully!', 'success');
            }, 1000);
        }

        function exportHistory() {
            AlumniumUtils.showToast('Exporting donation history...', 'info');
        }

        function setupRecurring() {
            AlumniumUtils.showToast('Opening recurring donation setup...', 'info');
        }
    </script>
</body>
</html>
